@model IEnumerable<iPark.Models.Vehicle>

@{
    ViewBag.Title = "Index";
    // ViewBag.Title = "";
}
<h2>Current Parked Vehicles</h2>

@using (Html.BeginForm())
{
<p class="active">
    <table>
        <tr>
            <td>RegNo</td>
            <td>VehicleType</td>
            <td>CheckIn</td>
            <td>CheckOut</td>
            <td></td>
        </tr>
        <tr>
            <td> @Html.TextBox("searchRegNo", ViewBag.searchRegNo as string) </td>
            <td> @Html.TextBox("searchVehicleType", ViewBag.searchVehicleType as string) </td>
            <td> @Html.TextBox("searchCheckIn", ViewBag.searchCheckIn as string) </td>
            <td> @Html.TextBox("searchCheckOut", ViewBag.searchCheckOut as string) </td>
            <td><input type="submit" value="Search" /></td>

        </tr>
    </table>


</p>
}

<p>
    @Html.ActionLink("Park a new vehicle", "Create")
</p>
<table class="table listTable">
    <tr class="well btn-info">
        <th>
            @Html.ActionLink("RegNo", "Index", new { sort = "0" }, new { @class = "glyphicon glyphicon-sort-by-alphabet" })
        </th>
        <th>
            @Html.ActionLink("Type", "Index", new { sort = "1" }, new { @class = "glyphicon glyphicon-sort-by-alphabet" })
        </th>
        <th>
            @Html.ActionLink("CheckIn", "Index", new { sort = "2" }, new { @class = "glyphicon glyphicon-sort-by-alphabet" })
        </th>
        <th>
            @Html.ActionLink("CheckOut", "Index", new { sort = "3" }, new { @class = "glyphicon glyphicon-sort-by-alphabet" })
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOut)
            </td>
            <td>
                <i class="glyphicon glyphicon-edit"></i>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                <i class="glyphicon glyphicon-search"></i>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @if (item.CheckOut == null)
                {
                <span> | </span>
                <i class="glyphicon glyphicon-ban-circle"></i>
                @Html.ActionLink("Check out", "CheckOut", new { id = item.Id })
                }
            </td>
        </tr>

    }


</table>
